<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#008000"
        android:gravity="center"
        android:paddingBottom="@dimen/text_horizontal_padding"
        android:paddingTop="@dimen/text_horizontal_padding"
        android:text="Main Fragment"
        android:textColor="#FFFFFF" />

    <!--<LinearLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:orientation="vertical">-->

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title :" />

            <TextView
                android:id="@+id/textView_main_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="15" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Link : " />

            <TextView
                android:id="@+id/textView_main_link"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="15" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description :" />

            <TextView
                android:id="@+id/textView_main_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="15" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Language :" />

            <TextView
                android:id="@+id/textView_main_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="15" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Copyright :" />

            <TextView
                android:id="@+id/textView_main_copyright"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="15" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TTl :" />

            <TextView
                android:id="@+id/textView_main_ttl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="15" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LastBuildDate :" />

            <TextView
                android:id="@+id/textView_main_lastBuildDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="15" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Generator :" />

            <TextView
                android:id="@+id/textView_main_generator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="15" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Atom :" />

            <TextView
                android:id="@+id/textView_main_atom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="15" />
        </TableRow>
    </TableLayout>


    <!--</LinearLayout>-->

</LinearLayout>